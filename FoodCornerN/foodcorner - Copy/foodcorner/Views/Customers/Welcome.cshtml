@model foodcorner.Models.Customer

@{
    ViewBag.Title = "Welcome";
}

<h2>ADD location</h2>
<html>
<head>
    <meta charset="utf-8">
    <title>Register </title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/Content/csslr/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/Content/csslr/style.css" />
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/Content/imageslr/loc.jpg" alt="form">
            </div>
            <form class="form-detail" action="#" method="post">
                @using (Html.BeginForm("Welcome", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <br />
                    <div class="form-row">
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Current Address" })
                        @Html.HiddenFor(model => model.CustomerId)

                    </div>


                    <div class="form-row-last">
                        <input type="submit" name="Add " class="register" value="Add">
                    </div>
                }

                </form>
        </div>
    </div>
</body>
</html>





